---
export interface Props {
  title: string
  description?: string
  width: string
  src: string
  shadow?: boolean
}

const { title, description, src, shadow, width } = Astro.props as Props

// const htmlDesc = `<span class="description">${ft.description}</span>`
---

<div class="container">
  <img
    class:list={['image', { shadow: shadow }]}
    src={src}
    alt={description}
    title={title}
  />
  <span class="description">{description}</span>
</div>
<style lang="scss" type="text/css" define:vars={{ width }}>
  .container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin-block: 2rem;
  }

  .image {
    margin-left: auto;
    margin-right: auto;
    border-radius: 12px;
    display: block;
    width: 100%;
    max-width: var(--width);
    max-reight: 900px;
  }

  .description {
    display: flex;
    justify-content: center;
    font-style: italic;
    margin: 1rem auto;
    text-align: center;
    max-width: var(--width);
  }

  .shadow {
    box-shadow:
      0 0 10px 0 #000,
      0 30px 60px var(--color-primary-alpha1);
  }
</style>
