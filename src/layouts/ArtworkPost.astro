---
import Layout from '@layouts/Layout.astro'
import type { CollectionEntry } from 'astro:content'
type Props = CollectionEntry<'artwork'>['data']

const { title, description } = Astro.props
---

<Layout title="Ricardo Ireno Artwork" btnback>
  <article class="container">
    <section class="header section">
      <h1 class="h0">{title}</h1>
      <h2 class="h2">{description}</h2>
      <span class="my-name">Ricardo Ireno Portfolio</span>
    </section>

    <div class="mdx-content inner-artwork">
      <slot />
    </div>
  </article>
</Layout>

<style lang="scss" type="text/css">
  @use '../sass/vars' as *;
  @use '../sass/abstracts' as *;
  @use 'sass:map';

  .container {
    width: 100%;
    text-align: justify;
  }

  .header {
    text-align: center;

    p {
      font-size: 2rem;
      max-width: 900px;
      text-align: center;
      margin: 1rem auto;
    }
  }

  .header .img-container {
    display: flex;
    width: 100%;
    justify-content: center;
  }

  .line {
    width: 100%;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin-block: 1rem;
  }

  .my-name {
    color: hsla(100, 0%, 92%, 0.6);
    font-size: 1.2rem;
    @include transition;

    &:before {
      content: '\276E';
      margin-right: 0.5rem;
    }

    &:hover {
      color: var(--color-accent);
    }
  }

  .h0 {
    color: hsl(100, 0%, 90%);
  }
  .h2 {
    color: var(--color-font-fg);
    max-width: 900px;
    margin: auto;
    font-family: $font_family_A;
  }

  // .work-description {
  //   font-size: 1.7rem;
  //   color: hsl(100, 0%, 92%);
  //   max-width: 900px;
  //   margin: 1rem auto 2rem auto;
  //   text-align: center;
  // }
</style>
